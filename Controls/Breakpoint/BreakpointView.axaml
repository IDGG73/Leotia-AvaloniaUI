<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:leotiaui="clr-namespace:LeotiaUI">
    <ControlTheme x:Key="{x:Type leotiaui:BreakpointView}" TargetType="leotiaui:BreakpointView">
        <Setter Property="IsVisible">
            <Setter.Value>
                <MultiBinding Converter="{x:Static leotiaui:WidthToVisibilityConverter.Instance}">
                    <CompiledBinding Path="Bounds.Width" RelativeSource="{RelativeSource AncestorType={x:Type leotiaui:BreakpointViewPort}}" />
                    <CompiledBinding Path="Breakpoint" RelativeSource="{RelativeSource Self}" />
                    <CompiledBinding Path="Invert" RelativeSource="{RelativeSource Self}" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </ControlTheme>
</ResourceDictionary>